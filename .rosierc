--
-- V-lang Rosie specific rcfile
-- CLI search order: First, ~/.rosierc and then ROSIE_HOME/.rosierc
--
libpath = ".;$ROSIE_HOME/rpl"
verbose = "0"

-- See https://www.lihaoyi.com/post/BuildyourownCommandLinewithANSIescapecodes.html
-- or https://stackoverflow.com/questions/4842424/list-of-ansi-color-escape-sequences
-- You may use color literals, or integer sequences, including RGB.
colors = "*=invert"
color = "net.*=red"
color = "net.ipv6=red;underline"
color = "net.url_common=red;bold"
color = "net.path=red"
color = "net.MAC=underline;green"
color = "num.*=underline"
color = "word.*=yellow"
color = "all.identifier=cyan"
color = "id.*=bold;cyan"
color = "os.path=green"
color = "date.*=blue"
color = "time.*=1;34"
color = "ts.*=underline;blue"
